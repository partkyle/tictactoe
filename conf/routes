# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/										Application.index

# Registration/Authentication
GET		/signup									Application.signup
POST	/signup									Application.register
POST	/login									Application.authenticate
GET		/logout									Application.logout

# Games
GET		/game/{gameId}							GameController.show
POST	/game/{gameId}/move						GameController.makeMove

# Users
GET		/users/{username}						Users.show
GET		/users/{username}/edit					Users.edit
POST	/users/{username}/update				Users.update

# Leaderboard
GET		/Leaderboard							Leaderboard.show

# Map static resources from the /app/public folder to the /public path
GET		/public/								staticDir:public

# Catch all
*		/{controller}/{action}					{controller}.{action}
